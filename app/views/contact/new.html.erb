<%= form_for @message, :url => contact_path do |form| %>
  

  <h3>Proponiti come insegnante</h3>
  <h2>Copia e incolla il tuo cv sulla casella testo e verrai ricontattato!!</h2>
  
  <fieldset class="fields">
  	
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
  
    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email %>
    </div>
    
  
    <div class="field">
      <%= form.label :subject %>
      <%= form.text_field :subject %>
    </div>
    
    <div class="field">
      <%= form.label :testo %>
      <%= form.text_area :body %>
    </div>
  </fieldset>
  
  <fieldset class="actions">
    <%= form.submit "Inoltra" %>
  </fieldset>
<% end %>